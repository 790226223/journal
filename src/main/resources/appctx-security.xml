<?xml version="1.0" encoding="UTF-8"?>
<beans:beans xmlns="http://www.springframework.org/schema/security"
	xmlns:beans="http://www.springframework.org/schema/beans" 
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="
		http://www.springframework.org/schema/beans 
		http://www.springframework.org/schema/beans/spring-beans-4.2.xsd
		http://www.springframework.org/schema/security 
		http://www.springframework.org/schema/security/spring-security-4.2.xsd
		">

	<global-method-security pre-post-annotations="enabled" />

	<http use-expressions="true" auto-config="true"
		  disable-url-rewriting="false" entry-point-ref="authenticationHandler">
		<intercept-url pattern="/login.json" access="IS_AUTHENTICATED_ANONYMOUSLY"/>
		<intercept-url pattern="/**" access="isAuthenticated()"/>
		<csrf disabled="true" />
		<http-basic />
		<form-login login-page="/main/index.json"
					username-parameter="username"
					password-parameter="password"
					login-processing-url="/login.json"
					authentication-success-handler-ref="authenticationHandler"
					authentication-failure-handler-ref="authenticationHandler" />
		<logout delete-cookies="JSESSIONID" invalidate-session="true"
				success-handler-ref="authenticationHandler" logout-url="/logout.json" />
		<access-denied-handler ref="authenticationHandler"/>
	</http>

	<authentication-manager>
		<authentication-provider user-service-ref="loginUserServiceImpl">
			<password-encoder ref="bcryptEncoder"/>
		</authentication-provider>
	</authentication-manager>

	<beans:bean id="bcryptEncoder" class="org.springframework.security.crypto.bcrypt.BCryptPasswordEncoder" />

	<beans:bean id="authenticationHandler"
				class="chenweipan.journal.security.AuthenticationHandler" />

	<beans:bean id="loginUserServiceImpl"
				class="chenweipan.journal.security.LoginUserServiceImpl" />

	<beans:bean id="loggerListener"
				class="org.springframework.security.authentication.event.LoggerListener" />

</beans:beans>